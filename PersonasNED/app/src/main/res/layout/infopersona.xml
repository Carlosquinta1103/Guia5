        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtdirec"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:text="TextView"

        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="match_parent"
